.personal
	padding-top 55px

.personal__row
	display flex
	align-items flex-end
	margin-bottom 23px
	+below('m')
		display block

.personal__title
	margin-right 1rem
	white-space nowrap
	+below('m')
		margin-bottom 1.3rem

.personal__data
	flex-grow 1
	padding-left 1rem
	padding-bottom 9px
	border-bottom 2px solid monospace-color
	+below('xl')
		background-color rgba(red, 20%)
	+below('l')
		background-color rgba(blue, 20%)
	+below('m')
		background-color rgba(green, 20%)
	+below('s')
		background-color rgba(orange, 20%)
	+below('xs')
		background-color rgba(purple, 20%)
