.academy
	padding-top 27px
	padding-bottom 10px
	&__link
		color link-color
		text-decoration none
		border-bottom 1px solid link-color
	&__title
	&__radio
		display inline-block
	&__radio
		+below('s')
			display block
			text-align center

.academy__wrap
	padding-bottom 1rem
	input[type='radio']
		display none
	label
		margin-right 17px
		color heading-color
		font-size 21px
		font-weight 700
		cursor pointer
		&::before
			content ""
			display inline-block
			margin-right 8px
			vertical-align middle
			border-radius 50%
			sprite $radio
	input:checked + label:before
		sprite $radio_check

.academy__title
	margin-right 28px
	+below('s')
		display block
		margin-bottom 1rem
		text-align center
