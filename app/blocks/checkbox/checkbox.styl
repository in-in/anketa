.checkbox
	display flex
	flex-direction column
	flex-wrap wrap
	height 270px
	+below('l')
		display block
		height auto
		column-count 2
	+below('s')
		column-count 1


.checkbox__item
	margin-bottom 11px
	width 33%
	+below('l')
		width auto
	input[type='checkbox']
		display none
	label
		display flex
		align-items flex-end
		color  #000000
		font-size 21px
		font-weight 700
		cursor pointer
		&::before
			content ''
			display inline-block
			margin-right 3px
			sprite $checkbox
	input[type='checkbox']:checked + label::before
		sprite $checkbox_check



